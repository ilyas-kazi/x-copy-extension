{
    "manifest_version": 3,
    "name": "X Copy Tweet",
    "version": "1.1",
    "description": "Adds a copy button to tweets on x.com",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "clipboardWrite",
        "scripting"
    ],
    "host_permissions": [
        "*://x.com/*",
        "*://twitter.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://x.com/*",
                "*://twitter.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "ilyaskazi@gmail.com",
            "strict_min_version": "115.0"
        }
    }
}