{
    "manifest_version": 2,
    "name": "X Copy Tweet",
    "version": "1.1",
    "description": "Adds a copy button to tweets on x.com",
    "permissions": [
        "clipboardWrite",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}